{
  "name": "template-lp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack && npm run watch:sass",
    "build": "next build && npm-run-all compile:sass concat:css prefix:css compress:css",
    "start": "next start && npm run watch:sass",
    "lint": "next lint",
    "compile:sass": "sass sass/main.scss css/style.comp.css --style compressed",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss css/style.concat.css --use autoprefixer -b 'last 5 versions' -o css/style.prefix.css",
    "compress:css": "sass css/style.prefix.css css/style.css --style compressed",
    "watch:sass": "sass --watch sass/main.scss:css/style.css --style compressed"
  },
  "dependencies": {
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swiper": "^12.0.3",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "concat": "^1.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "sass": "^1.89.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "@eslint/js": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "typescript-eslint": "^8.34.1"
  }
}
